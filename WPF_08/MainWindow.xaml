<Window x:Class="WPF_08.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_08"
        mc:Ignorable="d"
        Title="Buttons" Height="250" Width="720" x:Name="Window">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Свернуть" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Center" Height="45" Width="144" Click="RollMin"/>
        <Button Grid.Column="0" Content="Развернуть" HorizontalAlignment="Left" Margin="201,0,0,0" VerticalAlignment="Center" Height="45" Width="144" Click="ExpandTerritory"/>
        <Button Grid.Column="0" Content="Восстановить" HorizontalAlignment="Left" Margin="370,0,0,0" VerticalAlignment="Center" Height="45" Width="144" Click="Recovery"/>
        <Button Grid.Column="0" Content="Закрыть" HorizontalAlignment="Left" Margin="541,0,0,0" VerticalAlignment="Center" Height="45" Width="144" Click="Close"/>
    </Grid>
</Window>
